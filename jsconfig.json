{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vitest/globals", "vite/client"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}